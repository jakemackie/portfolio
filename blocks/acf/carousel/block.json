{
    "name": "acf/carousel",
    "title": "Carousel",
    "description": "A carousel of images that the user can swipe through",
    "icon": "slides",
    "keywords": ["carousel", "slider", "gallery"],
    "acf": {
        "mode": "preview",
		"renderTemplate": "carousel.php"
    },
    "viewScript": "file:../../../dist/carousel.js",
    "viewStyle": "file:../../../dist/carousel.css",
    "supports": {
        "align": "false",
        "color": {
            "text": true,
            "background": false
        },
        "spacing": {
            "margin": true,
            "padding": true
        }
    },
    "attributes": {
        "style": {
            "type": "object",
            "default": {
                "spacing": {
                    "margin": {
                        "top": "var:preset|spacing|48"
                    }
                }
            }
        },
        "textColor": {
            "type": "string",
            "default": "black"
        }
    }
}
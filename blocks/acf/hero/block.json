{
    "name": "acf/hero",
    "title": "Hero",
    "description": "A full-width hero block with a background image.",
    "icon": "welcome-view-site",
    "keywords": ["hero"],
    "acf": {
        "mode": "preview",
		"renderTemplate": "hero.php"
    },
    "supports": {
        "align": "false",
        "color": {
            "text": true,
            "background": false
        },
        "spacing": {
            "margin": true,
            "padding": true
        }
    },
    "attributes": {
        "style": {
            "type": "object",
            "default": {
                "spacing": {
                    "padding": {
                        "top": "var:preset|spacing|224",
                        "bottom": "var:preset|spacing|224"
                    }
                }
            }
        },
        "textColor": {
            "type": "string",
            "default": "black"
        }
    }
}
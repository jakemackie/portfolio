{
    "name": "acf/bordered-content",
    "title": "Bordered Content",
    "description": "A block for displaying bordered content.",
    "icon": "format-quote",
    "keywords": ["bordered", "content"],
    "acf": {
        "mode": "preview",
		"renderTemplate": "bordered-content.php"
    },
    "supports": {
        "align": "false",
        "color": {
            "text": true,
            "background": true
        },
        "spacing": {
            "margin": true,
            "padding": true
        }
    },
    "attributes": {
        "style": {
            "type": "object",
            "default": {
                "spacing": {
                    "padding": {
                        "top": "var:preset|spacing|64",
                        "bottom": "var:preset|spacing|64"
                    }
                }
            }
        },
        "backgroundColor": {
            "type": "string",
            "default": "cobalt"
        },
        "textColor": {
            "type": "string",
            "default": "white"
        }
    }
}
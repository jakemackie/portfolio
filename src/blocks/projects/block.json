{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 3,
	"name": "portfolio/projects",
	"version": "1.0.0",
	"title": "Projects",
	"category": "widgets",
	"icon": "portfolio",
	"description": "Display project posts in a card grid.",
	"supports": {
		"html": false,
		"spacing": {
			"padding": true,
			"margin": ["top", "bottom"]
		}
	},
	"attributes": {
		"displayMode": {
			"type": "string",
			"default": "all"
		},
		"selectedIds": {
			"type": "array",
			"items": {
				"type": "number"
			},
			"default": []
		}
	},
	"textdomain": "portfolio",
	"editorScript": "file:./index.js",
	"render": "file:./render.php"
}
